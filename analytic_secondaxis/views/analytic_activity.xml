<odoo>

    <record id="view_account_analytic_activity_form" model="ir.ui.view">
        <field name="name">analytic.analytic.activity.form</field>
        <field name="model">account.analytic.activity</field>
        <field name="arch" type="xml">
            <form string="Analytic Activity">
                <sheet string="Analytic Activity">
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            type="object"
                            name="toggle_active"
                            icon="fa-archive"
                        >
                            <field
                                name="active"
                                widget="boolean_button"
                                options='{"terminology": "archive"}'
                            />
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field
                                name="name"
                                class="oe_inline"
                                placeholder="e.g. Activity XYZ"
                            />
                        </h1>
                    </div>
                    <group name="main">
                        <group>
                            <field name="code"/>
                            <field name="parent_id"/>
                        </group>
                    </group>
                    <group name="analytic_account">
                        <field name="analytic_account_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_account_analytic_activity_list" model="ir.ui.view">
        <field name="name">account.analytic.activity.list</field>
        <field name="model">account.analytic.activity</field>
        <field name="arch" type="xml">
            <tree string="Analytic Activities">
                <field name="name" string="Name"/>
                <field name="code"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>


    <record id="view_account_analytic_activity_search" model="ir.ui.view">
        <field name="name">account.analytic.activity.search</field>
        <field name="model">account.analytic.activity</field>
        <field name="arch" type="xml">
            <search string="Analytic Activity">
                <field
                    name="name"
                    filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]"
                    string="Analytic Activity"
                />
                <filter string="Archived" domain="[('active', '=', False)]" name="inactive"/>
            </search>
        </field>
    </record>


    <record id="account_analytic_activity_action" model="ir.actions.act_window">
        <field name="name">Analytic Activities</field>
        <field name="res_model">account.analytic.activity</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
              Click to add a new analytic activity.
          </p>
          <p>
              This is a second axis to classify your analytic accounts.
          </p>
        </field>
    </record>


    <menuitem
        id="account_analytic_activity_menu"
        name="Analytic Activities"
        parent="account.menu_analytic_accounting"
        action="account_analytic_activity_action"
        groups="analytic.group_analytic_accounting"
    />

</odoo>
