<odoo>
     <template id="company_fields" inherit_id="auth_signup.fields" name="Auth Signup company form fields">
         <xpath expr="//input[@name='login']/.." position="before">
            <div id="is_company" t-attf-class="form-group">
                <div class="form-group field-name">
                    <div class="form-check">
                        <input type="checkbox" name="is_company" class="form-check-input" />
                        <div class="form-check-label">Is company ?</div>
                    </div>
                </div>
            </div>

        </xpath>
        <xpath expr="//input[@name='name']/.." position="after">
            <div name ="vat_div" class="form-group field-name" style="display:none">
                <label for="vat">VAT Number</label>
                <input type="text" name="vat" t-att-value="vat" id="vat" class="form-control form-control-sm" />
            </div>
        </xpath>
     </template>
</odoo>
