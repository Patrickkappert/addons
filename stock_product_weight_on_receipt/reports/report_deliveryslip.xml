<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_receipt_weight"
              inherit_id="stock.report_delivery_document"
              name="Receipt with weight">

        <xpath expr="//table[3]/thead/tr/th[3]" position="before">
            <th class="text-center">
                <span>Weight</span>
            </th>
        </xpath>

        <xpath expr="//table[3]//tr[@t-foreach='o.move_line_ids']//td[4]" position="after">
            <td class="text-center">
                <span t-field="move_line.display_weight"/>
                <span t-field="move_line.display_unit"/>
            </td>
        </xpath>

    </template>
</odoo>
